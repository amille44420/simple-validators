{
    "compilerOptions": {
       // "composite": true,
        "target": "es2016",
        "module": "commonjs",
        "outDir": "build",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
       // "declaration": true,
        //"declarationMap": true,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
        // "allowSyntheticDefaultImports": true,
        // "preserveConstEnums": true
    },
    "include": ["src/**/*.ts"]
}
